<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="#E2E2E2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewProducto"
            android:layout_width="120dp"
            android:background="@color/authui_colorPrimaryDark"
            android:layout_height="match_parent"/>

        <TextView
            android:text="Nombre "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="112dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="14dp"
            android:id="@+id/textViewNombre"/>
        <TextView
            android:id="@+id/textViewHorario"
            android:text="Horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="150dp"
            android:layout_below="@+id/textViewNombre"/>
        <TextView
            android:id="@+id/textViewDistancia"
            android:text="Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="118dp"
            android:layout_marginStart="150dp"
            android:layout_below="@+id/textViewHorario"/>

    </RelativeLayout>


</LinearLayout>